@page "/auction/{id:int}"
@using System.Linq
@using AuctionSystem.Client.Models
@using AuctionSystem.Client.Components
@inject AuctionSystem.Client.Services.ApiClient Api
@inject AuctionSystem.Client.Services.AuthService Auth
@inject NavigationManager Nav
@inject AuctionSystem.Client.Services.ToastService Toast

<h3>Auction Details</h3>

@if (auction is null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">@auction.Make @auction.Model @auction.Year</h4>
            <p class="card-text">
                <strong>Title:</strong> @auction.Title<br />
                <strong>Current price:</strong> @auction.CurrentPrice<br />

                <strong>Ends in:</strong>
                <Countdown EndUtc="@auction.EndDate" /><br />

                @if (auction.WinnerId is not null)
                {
                    <span class="badge bg-success">
                        Leading: @(auction.Winner?.Username ?? $"User {auction.WinnerId}")
                    </span>
                    <br />
                }

                <strong>End date:</strong> @auction.EndDate.ToLocalTime()<br />

                @if (!string.IsNullOrWhiteSpace(auction.Vin))
                {
                    <span><strong>VIN:</strong> @auction.Vin</span>

                    <br />
                }
                @if (auction.MileageKm is not null)
                {
                    <span><strong>Mileage:</strong> @auction.MileageKm km</span>

                    <br />
                }
                @if (!string.IsNullOrWhiteSpace(auction.Description))
                {
                    <span><strong>Description:</strong> @auction.Description</span>
                }
            </p>

            @if (Auth.IsAuthenticated)
            {
                <div class="mt-3">
                    <label>Place bid (must be &gt; @auction.CurrentPrice):</label>
                    <div class="input-group">
                        <input class="form-control" type="number" step="0.01" @bind="bidAmount" />
                        <button class="btn btn-primary" @onclick="OnPlaceBid" disabled="@isPlacing">Bid</button>
                    </div>
                    @if (!string.IsNullOrEmpty(msg))
                    {
                        <div class="mt-2 alert @(isError ? "alert-danger" : "alert-success")">@msg</div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-3">
                    Please log in to place a bid.
                </div>
            }

            @* ✅ მხოლოდ ავტორისთვის ვაჩვენებთ Delete ღილაკს *@
            @if (Auth.IsAuthenticated && auction.CreatedByUserId == Auth.UserId)
            {
                <div class="mt-3">
                    <button class="btn btn-outline-danger" @onclick="OnDelete" disabled="@isPlacing">
                        Delete Auction
                    </button>
                </div>
            }
        </div>
    </div>

    <h5>Bid history</h5>
    @if (auction.Bids is null || auction.Bids.Count == 0)
    {
        <p>No bids yet.</p>
    }
    else
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Amount</th>
                    <th>User</th>
                    <th>Placed at</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in auction.Bids.OrderByDescending(x => x.PlacedAt))
                {
                    <tr>
                        <td>@b.Id</td>
                        <td>@b.Amount</td>
                        <td>@(b.User?.Username ?? $"User {b.UserId}")</td>
                        <td>@b.PlacedAt.ToLocalTime()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    [Parameter] public int id { get; set; }

    AuctionDetailDto? auction;
    decimal bidAmount;
    bool isPlacing = false;
    string? msg;
    bool isError;

    protected override async Task OnParametersSetAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        msg = null;
        isError = false;
        try
        {
            auction = await Api.GetJson<AuctionDetailDto>($"api/Auctions/{id}");
            if (auction is not null)
            {
                bidAmount = auction.CurrentPrice + 1;
            }
            else
            {
                msg = "Auction not found.";
                isError = true;
            }
        }
        catch (Exception ex)
        {
            msg = $"Failed to load auction: {ex.Message}";
            isError = true;
        }
    }

    private async Task OnPlaceBid()
    {
        try
        {
            if (auction is null) return;
            if (!Auth.IsAuthenticated)
            {
                msg = "Please login first.";
                isError = true;
                return;
            }
            if (bidAmount <= auction.CurrentPrice)
            {
                msg = $"Bid must be higher than current price ({auction.CurrentPrice}).";
                isError = true;
                return;
            }

            isPlacing = true;

            var raw = bidAmount.ToString(System.Globalization.CultureInfo.InvariantCulture);
            var resp = await Api.PostRaw($"api/Bids/{id}", raw, "application/json");

            if (resp.IsSuccessStatusCode)
            {
                msg = "Bid placed ✅";
                isError = false;
                await LoadAsync(); // refresh after placing a bid
            }
            else
            {
                var text = await resp.Content.ReadAsStringAsync();
                msg = string.IsNullOrWhiteSpace(text) ? "Failed to place bid." : text;
                isError = true;
            }
        }
        catch (Exception ex)
        {
            msg = ex.Message;
            isError = true;
        }
        finally
        {
            isPlacing = false;
            StateHasChanged();
        }
    }

    private async Task OnDelete()
    {
        if (auction is null) return;

        try
        {
            isPlacing = true;

            var resp = await Api.Delete($"api/Auctions/{id}");
            if (resp.IsSuccessStatusCode)
            {
                Toast.Success("Auction deleted");
                Nav.NavigateTo("/auctions", forceLoad: true);
            }
            else
            {
                var text = await resp.Content.ReadAsStringAsync();
                Toast.Error(string.IsNullOrWhiteSpace(text) ? "Failed to delete auction." : text);
            }
        }
        catch (Exception ex)
        {
            Toast.Error(ex.Message);
        }
        finally
        {
            isPlacing = false;
        }
    }
}
